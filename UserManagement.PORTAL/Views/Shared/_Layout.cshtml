    <script>
        new Vue({
            el: '#applayout',
            data: {
                UserData: null,
                CheckUser: false
            },
            mounted() {
                axios
                 .get(API_BASE_URL + '/Account/IsLoged')
                    .then(response => {
                        if (response.data.Login == false) {
                            this.CheckUser = false;
                        }
                        else {
                            this.CheckUser = true;
                            this.UserData = response.data.contents;
                        }
                    })
            },
            methods: {
                Login: function () {
                    window.open(API_BASE_URL + "/Account/Index", "_self");
                }
            }
        })
    </script>


